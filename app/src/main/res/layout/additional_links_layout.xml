<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/link_name"
            android:textColorHint="@color/white_20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/link_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_linkname"/>
        </android.support.design.widget.TextInputLayout>


        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_delete_black_48dp"/>


    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/link_url"
        android:layout_below="@id/top_line"
        android:textColorHint="@color/white_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/link_url_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_linkurl"/>
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>